<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- 标题样式 -->
    <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline5TextBlock}">
        <Setter Property="Margin" Value="0,0,0,16" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    
    <!-- 子标题样式 -->
    <Style x:Key="SubTitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline6TextBlock}">
        <Setter Property="Margin" Value="0,8,0,8" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    
    <!-- 描述文本样式 -->
    <Style x:Key="DescriptionTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
        <Setter Property="Margin" Value="0,4,0,16" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Opacity" Value="0.87" />
    </Style>
    
    <!-- 标签文本样式 -->
    <Style x:Key="LabelTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody2TextBlock}">
        <Setter Property="Margin" Value="0,4,8,4" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>
    
    <!-- 状态文本样式 -->
    <Style x:Key="StatusTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignCaptionTextBlock}">
        <Setter Property="Margin" Value="0,4,0,4" />
        <Setter Property="Opacity" Value="0.87" />
    </Style>
    
    <!-- 错误文本样式 -->
    <Style x:Key="ErrorTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#F44336" />
        <Setter Property="Margin" Value="0,4,0,4" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    
    <!-- 成功文本样式 -->
    <Style x:Key="SuccessTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#4CAF50" />
        <Setter Property="Margin" Value="0,4,0,4" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    
    <!-- 警告文本样式 -->
    <Style x:Key="WarningTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FF9800" />
        <Setter Property="Margin" Value="0,4,0,4" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    
    <!-- 连接状态文本样式 - 已连接 -->
    <Style x:Key="ConnectedTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#4CAF50" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    
    <!-- 连接状态文本样式 - 未连接 -->
    <Style x:Key="DisconnectedTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#F44336" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary> 