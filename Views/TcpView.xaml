<UserControl x:Class="CommunicationProtocol.WPF.Views.TcpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CommunicationProtocol.WPF.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="900">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="TCP通信"
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       Margin="0,0,0,16" />
            <TextBlock Text="配置TCP服务器/客户端通信参数并进行发送接收"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,16" />
        </StackPanel>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- TCP配置面板 -->
            <materialDesign:Card Grid.Column="0"
                                 Margin="0,0,8,0"
                                 UniformCornerRadius="4">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- 模式选择 -->
                    <StackPanel Grid.Row="0"
                                Margin="0,0,0,16">
                        <TextBlock Text="通信模式"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Margin="0,0,0,8" />
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="服务器"
                                         IsChecked="{Binding IsServer}"
                                         Margin="0,0,16,0"
                                         Style="{StaticResource MaterialDesignRadioButton}" />
                            <RadioButton Content="客户端"
                                         IsChecked="{Binding IsClient}"
                                         Style="{StaticResource MaterialDesignRadioButton}" />
                        </StackPanel>
                    </StackPanel>

                    <!-- 服务器参数 -->
                    <Grid Grid.Row="1"
                          Visibility="{Binding ServerParametersVisibility}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="服务器参数"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Margin="0,0,0,8" />

                        <TextBlock Grid.Row="1"
                                   Text="监听IP地址"
                                   Margin="0,8,0,4" />
                        <ComboBox Grid.Row="2"
                                  ItemsSource="{Binding LocalIPs}"
                                  SelectedValue="{Binding SelectedLocalIP}"
                                  materialDesign:HintAssist.Hint="选择IP地址"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="0,0,0,8" />

                        <TextBlock Grid.Row="3"
                                   Text="监听端口"
                                   Margin="0,8,0,4" />
                        <TextBox Grid.Row="4"
                                 Text="{Binding ServerPort}"
                                 materialDesign:HintAssist.Hint="输入端口号"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,8" />
                    </Grid>

                    <!-- 客户端参数 -->
                    <Grid Grid.Row="2"
                          Visibility="{Binding ClientParametersVisibility}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="客户端参数"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Margin="0,0,0,8" />

                        <TextBlock Grid.Row="1"
                                   Text="服务器IP地址"
                                   Margin="0,8,0,4" />
                        <TextBox Grid.Row="2"
                                 Text="{Binding ServerIP}"
                                 materialDesign:HintAssist.Hint="输入服务器IP地址"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,8" />

                        <TextBlock Grid.Row="3"
                                   Text="服务器端口"
                                   Margin="0,8,0,4" />
                        <TextBox Grid.Row="4"
                                 Text="{Binding ClientPort}"
                                 materialDesign:HintAssist.Hint="输入端口号"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,8" />
                    </Grid>

                    <!-- 发送接收设置 -->
                    <StackPanel Grid.Row="3"
                                Margin="0,8,0,0">
                        <Separator Margin="0,0,0,8" />
                        <TextBlock Text="收发设置"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Margin="0,0,0,8" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <CheckBox Content="十六进制发送"
                                          IsChecked="{Binding HexSend}"
                                          Margin="0,4,0,4" />
                                <CheckBox Content="发送新行"
                                          IsChecked="{Binding SendNewLine}"
                                          Margin="0,4,0,4" />
                                <CheckBox Content="自动发送"
                                          IsChecked="{Binding AutoSend}"
                                          Margin="0,4,0,4" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <CheckBox Content="十六进制显示"
                                          IsChecked="{Binding HexDisplay}"
                                          Margin="0,4,0,4" />
                                <CheckBox Content="显示发送"
                                          IsChecked="{Binding ShowSend}"
                                          Margin="0,4,0,4" />
                                <CheckBox Content="自动滚动"
                                          IsChecked="{Binding AutoScroll}"
                                          Margin="0,4,0,4" />
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,8,0,0"
                              Visibility="{Binding AutoSendVisibility}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="发送间隔(ms): "
                                       VerticalAlignment="Center"
                                       Margin="0,0,4,0" />

                            <TextBox Grid.Column="1"
                                     Text="{Binding AutoSendInterval}"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                        </Grid>

                        <CheckBox Content="显示时间"
                                  IsChecked="{Binding ShowTime}"
                                  Margin="0,8,0,4" />

                        <Separator Margin="0,8,0,8" />
                    </StackPanel>

                    <!-- 连接状态和统计 -->
                    <StackPanel Grid.Row="4"
                                Margin="0,0,0,8">
                        <!-- 连接状态列表 -->
                        <TextBlock Text="连接状态"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Margin="0,0,0,8" />

                        <ListView ItemsSource="{Binding Connections}"
                                  SelectedItem="{Binding SelectedConnection}"
                                  Height="100"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource MaterialDesignDivider}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ID"
                                                    DisplayMemberBinding="{Binding Id}"
                                                    Width="40" />
                                    <GridViewColumn Header="远程终端"
                                                    DisplayMemberBinding="{Binding RemoteEndPoint}"
                                                    Width="180" />
                                    <GridViewColumn Header="状态">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Status}"
                                                           Foreground="{Binding StatusColor}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Text="发送:"
                                       Margin="0,0,8,4" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       Text="{Binding SendCount}"
                                       Margin="0,0,8,4" />
                            <Button Grid.Row="0"
                                    Grid.Column="2"
                                    Content="清零"
                                    Command="{Binding ClearSendCountCommand}"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Padding="8,0" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Text="接收:"
                                       Margin="0,4,8,0" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       Text="{Binding ReceiveCount}"
                                       Margin="0,4,8,0" />
                            <Button Grid.Row="1"
                                    Grid.Column="2"
                                    Content="清零"
                                    Command="{Binding ClearReceiveCountCommand}"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Padding="8,0" />
                        </Grid>
                    </StackPanel>

                    <!-- 操作按钮 -->
                    <StackPanel Grid.Row="5"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="启动"
                                Command="{Binding StartCommand}"
                                Visibility="{Binding StartButtonVisibility}"
                                Style="{StaticResource ConnectButtonStyle}" />
                        <Button Content="停止"
                                Command="{Binding StopCommand}"
                                Visibility="{Binding StopButtonVisibility}"
                                Style="{StaticResource DisconnectButtonStyle}" />
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- 通信面板 -->
            <Grid Grid.Column="1"
                  Margin="8,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="120" />
                </Grid.RowDefinitions>

                <!-- 接收区域 -->
                <materialDesign:Card Grid.Row="0"
                                     Margin="0,0,0,8"
                                     UniformCornerRadius="4">
                    <DockPanel Margin="16">
                        <DockPanel DockPanel.Dock="Top"
                                   Margin="0,0,0,8">
                            <TextBlock Text="接收区"
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}" />
                            <StackPanel DockPanel.Dock="Right"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Content="保存"
                                        Command="{Binding SaveReceiveDataCommand}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Margin="0,0,8,0" />
                                <Button Content="清空"
                                        Command="{Binding ClearReceiveDataCommand}"
                                        Style="{StaticResource MaterialDesignFlatButton}" />
                            </StackPanel>
                        </DockPanel>
                        <TextBox DockPanel.Dock="Bottom"
                                 Text="{Binding ReceivedData, Mode=OneWay}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas" />
                    </DockPanel>
                </materialDesign:Card>

                <!-- 发送区域 -->
                <materialDesign:Card Grid.Row="1"
                                     Margin="0,8,0,0"
                                     UniformCornerRadius="4">
                    <DockPanel Margin="16">
                        <DockPanel DockPanel.Dock="Top"
                                   Margin="0,0,0,8">
                            <TextBlock Text="发送区"
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}" />
                            <StackPanel DockPanel.Dock="Right"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Content="清空"
                                        Command="{Binding ClearSendDataCommand}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Margin="0,0,8,0" />
                                <Button Content="发送"
                                        Command="{Binding SendDataCommand}"
                                        IsEnabled="{Binding CanSend}"
                                        Style="{StaticResource SendButtonStyle}" />
                            </StackPanel>
                        </DockPanel>
                        <TextBox DockPanel.Dock="Bottom"
                                 Text="{Binding DataToSend}"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 AcceptsReturn="True"
                                 FontFamily="Consolas" />
                    </DockPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</UserControl>